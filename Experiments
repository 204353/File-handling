threelabel = tk.Label(root, text="This section allows you to check back on your confidence and any notes that you have made.")
showme = tk.Button(root, text="SHOW", command=show, width=30)
startbutton.grid(row=2)
mylabel.grid(row=3, column=0)
entry.grid(row=3, column=1, sticky='ew')
button.grid(row=4)
quit.grid(row=5)
newlabel.grid(row=6)
showme.grid(row=7)
root.mainloop()
